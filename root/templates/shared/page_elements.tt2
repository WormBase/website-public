[% MACRO multi_view(name, view_list) BLOCK;
    '<div class="multi-view-container">';

    # making buttons for the multi view
    FOREACH view IN view_list;
        view_id = view.key;
        view_button_id = view_id _ '_button';
        checked_opt = view.default ? ' checked' : '';
