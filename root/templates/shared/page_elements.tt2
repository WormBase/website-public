[% MACRO evidence(data, id, text, label) BLOCK %]
  [% IF data %]
  <div class="evidence [% IF text %] result[% END %]">
    [% IF text.exists('label') %]
      [% tag2link(text) %]
    [% ELSIF( text.match(".*\\<[^>]+>.*") ) # don't link html %]
          [% "$text" %]
    [% ELSE %]
      [% markup("$text") %]
    [% END %]
    [% id = id || 0; %]
[% IF text %]    <div id="evidence_[% id %]" class="ev ui-helper-hidden" > [% END %]
    [% FOREACH type IN data.keys -%]
        <b>[% type.replace('_',' ') %]</b>[% IF data.$type.size > 0 %]:
          [% IF (type == 'curatorial_remarks'); '<br />'; END; %]
          [% tags2link(data.$type, ((type == 'curatorial_remarks') ? '<br />' : '; '), 'items') %]
        [% END %]
        [% UNLESS loop.last %]<br>[% END %]
    [% END %]
[% IF text %]    </div>
    <div class="ev-more">
      <div class="v ev-more-line"></div>
      <div class="ev-more-text"><span>[% label ? label : 'evidence' %]</span></div>
      <div class="v ui-icon ui-icon-triangle-1-s"></div>
    </div>
[% END %]
  </div>
  [% ELSE %]
    [% IF text.exists('label') %]
	[% tag2link(text) %]
    [% ELSE %]
	[% markup(text) %]
    [% END %]
  [% END %]
[% END %]

